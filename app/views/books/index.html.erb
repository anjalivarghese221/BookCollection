<h1>All Books</h1>

<%= link_to "Add New Book", new_book_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price) if book.price %></td>
        <td><%= book.published_date&.strftime('%Y-%m-%d') %></td>
        <td>
          <%= link_to "Show", book_path(book) %> |
          <%= link_to "Edit", edit_book_path(book) %> |
          <%= link_to "Delete", delete_book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if notice %>
  <p style="color: green;"><%= notice %></p>
<% end %>
